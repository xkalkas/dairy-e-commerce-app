<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".insertCustomerFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewAddCustomer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ADD CUSTOMER"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="24dp"
            android:layout_margin="24dp"/>

        <EditText
            android:id="@+id/editTextC1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:hint="insert id"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/editTextC2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:hint="insert name"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/editTextC3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:hint="insert zip code"
            android:minHeight="48dp" />

        <Button
            android:id="@+id/AddCustomerBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Customer" />
    </LinearLayout>

</FrameLayout>