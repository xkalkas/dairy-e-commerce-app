<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".insertTransactionFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewAddComp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ADD TRANSACTION"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="24dp"
            android:layout_margin="24dp"/>

        <EditText
            android:id="@+id/editText12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:hint="insert customer id"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/editText22"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:hint="insert transaction id"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/editText32"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:hint="insert date"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/editText42"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:hint="insert product id"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/editText52"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:hint="insert ammount"
            android:minHeight="48dp" />

        <Button
            android:id="@+id/AddTransactionContentsBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Transaction" />
    </LinearLayout>

</FrameLayout>